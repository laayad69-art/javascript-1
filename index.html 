        let completed = parseInt(localStorage.getItem('quranCompleted') || '0');

        function updateProgress() {
            const percent = Math.round((completed / 114) * 100);
            document.getElementById('completed').textContent = completed;
            document.getElementById('progress-fill').style.width = percent + '%';
            document.getElementById('progress-fill').textContent = percent + '%';
        }

        function suggestDailySurah() {
            const random = surahs[Math.floor(Math.random() * surahs.length)];
            document.getElementById('daily-surah').textContent = random;
        }

        function markSurahComplete() {
            if (completed < 114) {
                completed++;
                localStorage.setItem('quranCompleted', completed);
                updateProgress();
                alert('ูุจุฑูู! ุณูุฑุฉ ููุชููุฉ ุจูุฌุงุญ ๐');
                if (completed === 114) {
                    alert('ุชูุงูููุง ุงูุญุงุฑุฉ! ููุฏ ุฃูููุช ุฎุชู ุงููุฑุขู ุงููุฑูู ๐');
                }
            }
        }

        function showDailyAyah() {
            const randomAyah = ayahs[Math.floor(Math.random() * ayahs.length)];
            document.getElementById('daily-ayah').textContent = randomAyah.ayah;
            document.getElementById('ayah-tafsir').textContent = randomAyah.tafsir;
        }

        function showAzkar(type) {
            const title = type === 'morning' ? 'ุฃุฐูุงุฑ ุงูุตุจุงุญ' : type === 'evening' ? 'ุฃุฐูุงุฑ ุงููุณุงุก' : 'ุฃุฐูุงุฑ ุงูููู';
            const list = azkar[type].map(d => `<p>โข ${d}</p>`).join('');
            document.getElementById('azkar-display').innerHTML = `<h3>${title}</h3>` + list;
        }

        // ุชุญููู ุงูุชูุฏู ุนูุฏ ูุชุญ ุงูุตูุญุฉ
        updateProgress();
        suggestDailySurah();
        showDailyAyah();
    </script>
